{
  "name": "@portkey-ai/hoot",
  "version": "0.2.0",
  "description": "Postman for MCP Servers - A fast, lightweight testing tool with full OAuth 2.1 support",
  "type": "module",
  "bin": {
    "hoot": "./bin/hoot.js"
  },
  "scripts": {
    "start": "node bin/hoot.js",
    "dev": "vite",
    "backend": "node mcp-backend-server.js",
    "proxy": "node proxy-server.js",
    "dev:full": "concurrently \"npm run backend\" \"npm run dev\"",
    "dev:with-proxy": "concurrently \"npm run proxy\" \"npm run dev\"",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "testing",
    "developer-tools",
    "model-context-protocol",
    "oauth",
    "postman",
    "api-testing"
  ],
  "author": "Hoot Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/portkey-ai/hoot.git"
  },
  "bugs": {
    "url": "https://github.com/portkey-ai/hoot/issues"
  },
  "homepage": "https://github.com/portkey-ai/hoot#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "typescript": "^5.9.3",
    "vite": "^7.1.12"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.1",
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "http-proxy-middleware": "^3.0.5",
    "lucide-react": "^0.546.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.4",
    "zustand": "^5.0.8"
  }
}